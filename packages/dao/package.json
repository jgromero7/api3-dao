{
  "name": "@api3-dao/dao",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "hardhat compile",
    "diff": "mkdir -p diff && npm run diff:api3voting 2> /dev/null | npm run diff:api3basetemplate 2> /dev/null | true",
    "diff:api3voting": "git diff --no-index ./node_modules/@aragon/apps-voting/contracts/Voting.sol ./contracts/Api3Voting.sol > ./diff/Api3Voting.sol 2>&1",
    "diff:api3basetemplate": "git diff --no-index ./node_modules/@aragon/templates-shared/contracts/BaseTemplate.sol ./contracts/Api3BaseTemplate.sol > ./diff/Api3BaseTemplate.sol 2>&1",
    "lint": "npm run lint:eslint && npm run lint:solhint",
    "lint:solhint": "solhint ./**/*.sol",
    "lint:eslint": "eslint . --ext .js",
    "prettify": "prettier --write \"./**/*.js\"",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.js\"",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=TRUE hardhat test"
  },
  "devDependencies": {
    "@aragon/templates-shared": "^1.0.1",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.3",
    "eslint": "^7.21.0",
    "ethereum-waffle": "^3.3.0",
    "hardhat": "^2.1.1",
    "hardhat-deploy": "^0.7.0-beta.46",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^5.1.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "solhint": "^3.3.3",
    "solidity-coverage": "^0.7.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty-quick && npm run lint"
    }
  }
}
