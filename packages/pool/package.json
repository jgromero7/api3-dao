{
  "name": "@api3-dao/pool",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "hardhat compile",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "deploy:rinkeby": "hardhat deploy --network rinkeby",
    "flatten": "hardhat flatten contracts/Api3Pool.sol > Api3Pool.flat.sol && yarn run flatten:delete-license-lines",
    "flatten:delete-license-lines": "sed --in-place '/SPDX-License-Identifier/d' *.flat.sol",
    "lint": "npm run lint:eslint && npm run lint:solhint",
    "lint:solhint": "solhint ./**/*.sol",
    "lint:eslint": "eslint . --ext .js",
    "prettify": "prettier --write \"./**/*.js\"",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.js\"",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=TRUE hardhat test"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.1",
    "chai": "^4.3.3",
    "eslint": "^7.21.0",
    "ethereum-waffle": "^3.3.0",
    "hardhat": "^2.1.1",
    "hardhat-deploy": "^0.7.0-beta.46",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^5.1.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "solhint": "^3.3.3",
    "solidity-coverage": "^0.7.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty-quick && npm run lint"
    }
  }
}
